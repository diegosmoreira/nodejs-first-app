{{> header}}

<h3>Edit Post</h3>

<form method="POST">

    <label>
        Title:
        <input type="text" name="title" value="{{post.title}}">
    </label>
    <br>
    <label>
        Body:
        <textarea name="body" cols="30" rows="10">{{post.body}}</textarea>
    </label>
    <br>
    <label>
        Tags: <input type="text" name="tags" value="{{post.tags}}">
    </label>
    <br>
    <label>
        <input type="submit" value="Save">
    </label>
</form>