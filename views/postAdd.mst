{{> header}}

<h3>Add Post</h3>

<form method="POST">

    <label>
        Title:
        <input type="text" name="title">
    </label>
    <br>
    <label>
        Body:
        <textarea name="body" cols="30" rows="10"></textarea>
    </label>
    <br>
    <label>
        Tags: <input type="text" name="tags">
    </label>
    <br>
    <label>
        <input type="submit" value="Save">
    </label>
</form>